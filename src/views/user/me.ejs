<%- include("../partials/layout-start", {title: title}) %>
<%- include("../partials/menu") %>
<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    Добро пожаловать, <%= user.username || 'Добрый User' %>!
                </h5>
                <p class="card-text">
                    Ваш email: <%= user.email %>
                </p>
                <div class="text-right">
                    <a class="btn btn-sm btn-danger" href="/user/logout">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/layout-end") %>